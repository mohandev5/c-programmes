#include<stdio.h>
int main()
{
    int n;
    printf("enter month number :");
    scanf("%d",&n);
    switch(n)
    {
      case 1:
      case 3:
      case 5:
      case 7:
      case 12:
           printf("no of days are 31");
           break;
     case 4:
     case 6:
     case 8:
     case 9:
     case 11:
          printf("no of days are 30");
          break;
     case 2:
          printf("no of days are 28/29:depending on the leap year ");
          break;
          default:
          printf("enter invalid month number ");
    }
    return 0;
}
