#include<stdio.h>
int
main ()
{
  int a, b, c, d;
  printf ("enter the values :");
  scanf ("%d%d%d%d", &a, &b, &c, &d);
  if (a < b)
    {
      if (a < c)
	{
	  if (a < d)
	    {
	      printf ("A is smallest number :%d", a);
	    }
	}
    }
  else if (b < c)
    {
      if (b < d)
	{
	  printf ("B is smallest number :%d", b);
	}
    }
  else if (c < d)
    {
      printf ("C is smallest number :%d", c);
    }
  else
    {
      printf ("D is smallest number :%d", d);
    }
}

