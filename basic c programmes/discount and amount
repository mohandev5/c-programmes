#include<stdio.h>
int main()
{
    int a,d;
    printf("enter the amount :");
    scanf("%d",&a);
    if(a<=2000)
    {
        d=(a*0.05);
        a=(a-d);
        printf("total amount with discount :%d",a);
    }
    else
    {
        d=((2000*0.05)+((a-2000)*0.10));
        a=(a-d);
        printf("total amount with discount :%d",a);
    }
    return 0;
}
