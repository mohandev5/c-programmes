#include<stdio.h>
int main()
{
    int a,b;
    printf("enter the two numbers :");
    scanf("%d%d",&a,&b);
    a=a+b;
    b=a-b;
    a=a-b;
    printf("swapping of two numbers :%d\n%d",a,b);
    return 0;
}






SWAPPINF OF TWO NUMBERS USING 3RD VARIABLE:
 
 
 #include<stdio.h>
int main()
{
    int a,b,c;
    printf("enter the two numbers :");
    scanf("%d%d",&a,&b);
    c=a;
    a=b;
    b=c;
    printf("swapping of two numbers :%d\n%d",a,b);
    return 0;
}
