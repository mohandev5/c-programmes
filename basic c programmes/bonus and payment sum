#include<stdio.h>
int main()
{
    int b,p;
    printf("enter the payment :");
    scanf("%d",&p);
    if(p<=1600)
    {
        b=p*0.15;
        if(b<=100)
        {
            b=100;
        }
        printf("bonu is :%d",b);
    }
    else if(p>=1601&&p<=3000)
    {
        b=p*0.10;
        if(b>240)
        {
            b=240;
        }
            printf("bonus is :%d",b);
    }
    else
    {
        b=300;
        printf("bonus is :%d",b);
    }
    return 0;
}
