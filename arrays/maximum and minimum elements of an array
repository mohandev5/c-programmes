#include<stdio.h>
int main()
{
    int n,i,max,min;
    printf("enter the size of an array :");
    scanf("%d",&n);
    int a[100];
    printf("enter the elements in an array :");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++)
    {
        printf("\n%d",a[i]);
    }
    max=a[0];
    for(i=0;i<n;i++)
    {
        if(a[i]>max)
        {
            max=a[i];
        }
    }
    printf("\n maximum element in an arry:%d",max);
    
    
    
    
    
    min=a[0];
    for(i=0;i<n;i++)
    {
    min=a[0];
        if(a[i]<min)
        {
            min=a[i];
        }
    }
    printf("\n minimum element in an array:%d",min);
    return 0;
}

   
