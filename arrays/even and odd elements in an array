#include<stdio.h>
int main()
{
     
    int n,i;
    printf("enter the size of anarray :");
    scanf("%d",&n);
    int a[n];
    printf("enter the elements of an array :");
    for(i=0;i<n;i++)
    {
       
        scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++)
    {
        printf("%d",a[i]);
    }
    for(i=0;i<n;i++)
    {
        if(a[i]%2==0)
        {
            printf("\neven elements in an array :%d",a[i]);
        }
        else
        {
            printf("\nodd elements in an array :%d",a[i]);
        }
    }
    return 0;
}
